<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_TextView" parent="">
        <item name="android:textSize">@dimen/ld_sp_13</item>
        <item name="android:textColor">@color/ld_title_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ld_account_menu_layout" parent="">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_dp_48</item>
    </style>
    <style name="ld_dialog_base_button" parent="">
        <item name="android:textSize">@dimen/ld_sp_14</item>
        <item name="android:textColor">@color/ld_button_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ld_org_btn_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_dp_45</item>
        <item name="android:layout_marginTop">@dimen/ld_base_dialog_button_top</item>
    </style>
    <style name="ld_dialog_base_edittext" parent="">
        <item name="android:textSize">@dimen/ld_base_one_level_text_size_sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/ld_dialog_base_edittext_bg</item>
        <item name="android:paddingLeft">@dimen/account_icon_margin_left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_dp_45</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/ld_edittext_cursor</item>
    </style>
    <style name="ld_dialog_edittext" parent="">
        <item name="android:textSize">@dimen/ld_sp_15</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#99999999</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/ld_dialog_edittext_bg</item>
        <item name="android:paddingLeft">@dimen/ld_dp_13</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_dp_45</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@drawable/ld_edittext_cursor</item>
    </style>
</resources>
