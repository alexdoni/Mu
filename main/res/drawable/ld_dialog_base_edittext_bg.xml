<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="75%">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#f5bf00"/>
                <size
                    android:height="2dp"
                    android:width="1dp"/>
            </shape>
        </rotate>
    </item>
    <item android:state_focused="false">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="75%">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#e5e5e5"/>
                <size
                    android:height="2dp"
                    android:width="1dp"/>
            </shape>
        </rotate>
    </item>
</selector>
