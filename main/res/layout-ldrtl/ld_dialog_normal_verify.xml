<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">
    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ld_bg_dialog"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginHorizontal="14dp">
        <TextView
            android:textSize="20sp"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ld_base_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/ld_dialog_title"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/ld_base_iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ld_svg_close"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ld_base_tv_title">
            <TextView
                android:textSize="14sp"
                android:textColor="#fe5b00"
                android:gravity="start|center_vertical"
                android:id="@+id/ld_base_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="17dp"
                android:text="@string/ld_dialog_content"
                android:layout_marginHorizontal="17dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="start|center_vertical"
                android:id="@+id/ld_base_tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="17dp"
                android:layout_marginHorizontal="17dp"/>
            <RelativeLayout
                android:id="@+id/ld_base_rl_small"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="17dp">
                <EditText
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:gravity="start|center_vertical"
                    android:id="@+id/ld_base_et_small"
                    android:background="@drawable/ld_bg_edit_text"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="10dp"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"/>
                <ImageView
                    android:id="@+id/ld_base_iv_small"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/ld_base_et_small"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#009de4"
                    android:gravity="center"
                    android:id="@+id/ld_base_tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ld_dialog_refresh"
                    android:drawablePadding="3dp"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ld_svg_refresh"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/ld_base_iv_small"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ld_base_rl_large"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="17dp">
                <ImageView
                    android:id="@+id/ld_base_iv_large"
                    android:layout_width="154dp"
                    android:layout_height="90dp"/>
                <FrameLayout
                    android:background="@drawable/ld_bg_tv_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_toEndOf="@+id/ld_base_iv_large">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#009de4"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"
                        android:id="@+id/ld_base_tv_large"
                        android:paddingLeft="6dp"
                        android:paddingTop="8dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="@string/ld_dialog_refresh"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/ld_svg_refresh"
                        android:layout_marginStart="6dp"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="8dp"/>
                </FrameLayout>
                <EditText
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:gravity="start|center_vertical"
                    android:id="@+id/ld_base_et_large"
                    android:background="@drawable/ld_bg_edit_text"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="1dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/ld_base_iv_large"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"/>
            </RelativeLayout>
            <View
                android:background="#26000000"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ld_base_ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#fe9129"
                    android:gravity="center"
                    android:id="@+id/ld_base_btn_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/ld_dialog_submit"
                    android:layout_weight="1"/>
                <View
                    android:background="#26000000"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:id="@+id/ld_base_btn_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/ld_dialog_cancel"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
