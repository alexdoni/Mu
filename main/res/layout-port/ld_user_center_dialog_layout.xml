<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:clickable="false"
        android:longClickable="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/centerLayout"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ld_dp_65"
            android:fillViewport="true"/>
        <FrameLayout
            android:background="@drawable/ld_bg_user_center_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_75">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_top_arrow"
                android:layout_width="@dimen/ld_dp_86"
                android:layout_height="@dimen/ld_dp_29"
                android:src="@drawable/ld_user_center_top_arrow"/>
            <GridView
                android:id="@+id/function_grid"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ld_dp_34"
                android:layout_marginLeft="@dimen/ld_dp_13"
                android:layout_marginTop="@dimen/ld_dp_29"
                android:layout_marginRight="@dimen/ld_dp_13"
                android:layout_marginBottom="@dimen/ld_dp_10"
                android:listSelector="@android:color/transparent"
                android:horizontalSpacing="@dimen/ld_dp_10"
                android:layout_marginHorizontal="@dimen/ld_dp_13"/>
        </FrameLayout>
    </FrameLayout>
    <View
        android:id="@+id/smegma_view"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
