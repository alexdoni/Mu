<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f2f3f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_45"
            android:layout_marginTop="@dimen/ld_dp_5">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="@dimen/ld_dp_7"
                android:layout_width="@dimen/ld_dp_30"
                android:layout_height="@dimen/ld_dp_30"
                android:src="@drawable/ld_top_back_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ld_dp_5"/>
            <com.p008ld.sdk.widget.MyRadioGroup
                android:id="@+id/my_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/recyclerView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ld_dp_50"
            android:listSelector="#00000000"
            android:divider="@null"/>
        <RelativeLayout
            android:id="@+id/empty_data_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bkEmptyView"
                android:layout_width="@dimen/ld_dp_85"
                android:layout_height="@dimen/ld_dp_85"
                android:src="@drawable/ld_no_data_img"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_12"
                android:textColor="#4d000000"
                android:id="@+id/empty_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_7"
                android:text="@string/ld_not_order_text"
                android:layout_below="@+id/bkEmptyView"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_order_detail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_45"
            android:layout_marginTop="@dimen/ld_dp_5">
            <ImageView
                android:id="@+id/iv_detail_back"
                android:padding="@dimen/ld_dp_7"
                android:layout_width="@dimen/ld_dp_30"
                android:layout_height="@dimen/ld_dp_30"
                android:src="@drawable/ld_top_back_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ld_dp_5"/>
            <TextView
                android:textSize="@dimen/ld_sp_14"
                android:textColor="#212121"
                android:id="@+id/tv_detail_title"
                android:text="@string/ld_order_info_text"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/default_TextView"/>
        </RelativeLayout>
        <com.p008ld.sdk.widget.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/ld_dp_44"
            android:layout_height="@dimen/ld_dp_44"/>
        <TextView
            android:textSize="@dimen/ld_sp_10"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/tv_cp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_2"/>
        <TextView
            android:textSize="@dimen/ld_sp_16"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/ld_dialog_base_bg"
            android:paddingLeft="@dimen/ld_dp_15"
            android:paddingTop="@dimen/ld_dp_15"
            android:paddingRight="@dimen/ld_dp_15"
            android:paddingBottom="@dimen/ld_dp_15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/ld_dp_10"
            android:layout_marginTop="@dimen/ld_dp_15"
            android:layout_marginRight="@dimen/ld_dp_10"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/ld_dp_10"
            android:paddingHorizontal="@dimen/ld_dp_15"
            android:paddingVertical="@dimen/ld_dp_15">
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_status"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:text="@string/ld_order_status_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_status_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_status"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_time"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_below="@+id/tv_status"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_status_1"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_pay_method"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:text="@string/ld_pay_channel_text"
                android:layout_below="@+id/tv_time"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_pay_method_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_time_1"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_order_number"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:text="@string/ld_order_id_text"
                android:layout_below="@+id/tv_pay_method"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_order_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_pay_method_1"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_product_id"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:text="@string/ld_order_detail_product_id"
                android:layout_below="@+id/tv_order_number"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_product_id_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_order_number_1"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_product_name"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:text="@string/ld_commodity_name_text"
                android:layout_below="@+id/tv_product_id"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_product_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_product_id_1"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_app_id"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:text="@string/ld_order_detail_app_id"
                android:layout_below="@+id/tv_product_name"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_app_id_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_product_name_1"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#b2000000"
                android:id="@+id/tv_app_name"
                android:layout_width="@dimen/ld_dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:text="@string/ld_order_detail_app_name"
                android:layout_below="@+id/tv_app_id"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#000000"
                android:id="@+id/tv_app_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_app_id_1"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_contact"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ld_dp_44"
            android:layout_marginTop="@dimen/ld_dp_15"
            android:layout_marginRight="@dimen/ld_dp_10">
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#80000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_order_detail_question_order"/>
            <ImageView
                android:id="@+id/iv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ld_svg_contact_service"
                android:layout_marginStart="@dimen/ld_dp_6"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
