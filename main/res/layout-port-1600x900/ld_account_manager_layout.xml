<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="@drawable/ld_user_center_bg"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_30"
                android:layout_marginBottom="@dimen/ld_dp_30"
                android:layout_marginStart="@dimen/ld_dp_16"
                android:layout_marginEnd="@dimen/ld_dp_16"
                android:layout_marginVertical="@dimen/ld_dp_30">
                <com.p008ld.sdk.widget.CircleImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="@dimen/ld_dp_60"
                    android:layout_height="@dimen/ld_dp_60"
                    android:layout_marginRight="@dimen/ld_dp_10"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="@dimen/ld_sp_16"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ld_dp_10"
                    android:layout_toRightOf="@+id/iv_user_avatar"/>
                <TextView
                    android:textSize="@dimen/ld_sp_9"
                    android:textColor="#80000000"
                    android:id="@+id/tv_ld_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ld_dp_4"
                    android:drawableRight="@drawable/ld_svg_id_copy"
                    android:drawablePadding="@dimen/ld_dp_5"
                    android:layout_toRightOf="@+id/iv_user_avatar"
                    android:layout_below="@+id/tv_username"/>
                <Button
                    android:textSize="@dimen/ld_sp_13"
                    android:textColor="#000000"
                    android:id="@+id/btn_edit"
                    android:background="@drawable/ld_recharge_btn_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ld_dp_32"
                    android:minWidth="@dimen/ld_dp_75"
                    android:text="@string/ld_account_edit_text"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/ld_dp_14"
                    android:paddingEnd="@dimen/ld_dp_14"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ld_dp_8"
                android:paddingStart="@dimen/ld_dp_10"
                android:paddingEnd="@dimen/ld_dp_10">
                <RelativeLayout
                    android:id="@+id/email_layout"
                    android:background="@drawable/ld_user_center_account_bg"
                    android:paddingLeft="@dimen/ld_dp_10"
                    android:paddingRight="@dimen/ld_dp_10"
                    android:layout_marginTop="@dimen/ld_dp_8"
                    android:paddingHorizontal="@dimen/ld_dp_10"
                    style="@style/ld_account_menu_layout">
                    <TextView
                        android:textSize="@dimen/ld_sp_12"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_email_text"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/email_right_img"
                        android:layout_width="@dimen/ld_dp_12"
                        android:layout_height="@dimen/ld_dp_12"
                        android:src="@drawable/ld_menu_spread_img"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/email_eye_img"
                        android:visibility="gone"
                        android:layout_width="@dimen/ld_dp_14"
                        android:layout_height="@dimen/ld_dp_14"
                        android:src="@drawable/ld_show_email_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/ld_sp_10"
                        android:textColor="#99000000"
                        android:id="@+id/email_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ld_dp_10"
                        android:text="@string/ld_unbound_text"
                        android:layout_toLeftOf="@+id/email_right_img"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/google_account_layout"
                    android:background="@drawable/ld_user_center_account_bg"
                    android:paddingLeft="@dimen/ld_dp_10"
                    android:paddingRight="@dimen/ld_dp_10"
                    android:layout_marginTop="@dimen/ld_dp_8"
                    android:paddingHorizontal="@dimen/ld_dp_10"
                    style="@style/ld_account_menu_layout">
                    <TextView
                        android:textSize="@dimen/ld_sp_12"
                        android:textColor="#999999"
                        android:id="@+id/tv_google_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_google_account_text"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/google_account_right_img"
                        android:layout_width="@dimen/ld_dp_12"
                        android:layout_height="@dimen/ld_dp_12"
                        android:src="@drawable/ld_menu_spread_img"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/google_account_eye_img"
                        android:visibility="gone"
                        android:layout_width="@dimen/ld_dp_14"
                        android:layout_height="@dimen/ld_dp_14"
                        android:src="@drawable/ld_show_email_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/ld_sp_10"
                        android:textColor="#99000000"
                        android:id="@+id/google_account_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ld_dp_10"
                        android:text="@string/ld_unbound_text"
                        android:layout_toLeftOf="@+id/google_account_right_img"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/order_record_layout"
                    android:background="@drawable/ld_user_center_account_bg"
                    android:paddingLeft="@dimen/ld_dp_10"
                    android:paddingRight="@dimen/ld_dp_10"
                    android:layout_marginTop="@dimen/ld_dp_8"
                    android:paddingHorizontal="@dimen/ld_dp_10"
                    style="@style/ld_account_menu_layout">
                    <TextView
                        android:textSize="@dimen/ld_sp_12"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_order_record_text"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="@dimen/ld_dp_12"
                        android:layout_height="@dimen/ld_dp_12"
                        android:src="@drawable/ld_menu_spread_img"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/reset_password_layout"
                    android:background="@drawable/ld_user_center_account_bg"
                    android:paddingLeft="@dimen/ld_dp_10"
                    android:paddingRight="@dimen/ld_dp_10"
                    android:layout_marginTop="@dimen/ld_dp_8"
                    android:paddingHorizontal="@dimen/ld_dp_10"
                    style="@style/ld_account_menu_layout">
                    <TextView
                        android:textSize="@dimen/ld_sp_12"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_reset_password_text"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="@dimen/ld_dp_12"
                        android:layout_height="@dimen/ld_dp_12"
                        android:src="@drawable/ld_menu_spread_img"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/exit_login_layout"
                    android:background="@drawable/ld_user_center_account_bg"
                    android:layout_marginTop="@dimen/ld_dp_8"
                    style="@style/ld_account_menu_layout">
                    <TextView
                        android:textSize="@dimen/ld_sp_17"
                        android:textColor="#80ff0000"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_exit_login_text"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textSize="@dimen/ld_sp_8"
        android:textColor="#4d000000"
        android:gravity="center"
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ld_dp_20"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
