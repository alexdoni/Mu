<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/ld_ldbit_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ld_dp_10">
        <RelativeLayout
            android:id="@+id/rl_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_54">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/ld_dp_64"
                android:layout_height="@dimen/ld_dp_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ld_dp_10"/>
            <TextView
                android:textSize="@dimen/ld_sp_14"
                android:textColor="#333333"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/iv_icon"/>
            <ImageView
                android:id="@+id/iv_unfold"
                android:layout_width="@dimen/ld_dp_12"
                android:layout_height="@dimen/ld_dp_12"
                android:src="@drawable/ld_ic_unfold"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.p008ld.sdk.widget.MyGridView
            android:id="@+id/grid_grade"
            android:paddingLeft="@dimen/ld_dp_10"
            android:paddingRight="@dimen/ld_dp_10"
            android:visibility="gone"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ld_dp_10"
            android:listSelector="@android:color/transparent"
            android:horizontalSpacing="@dimen/ld_dp_10"
            android:verticalSpacing="@dimen/ld_dp_10"
            android:numColumns="4"
            android:paddingHorizontal="@dimen/ld_dp_10"/>
    </LinearLayout>
</FrameLayout>
