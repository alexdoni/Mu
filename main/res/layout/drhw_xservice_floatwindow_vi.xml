<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/img_floatwindows"
        android:background="@drawable/drhw_floatview_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/red_view"
        android:background="@drawable/drhw_shape_round_red"
        android:visibility="gone"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignTop="@+id/img_floatwindows"
        android:layout_alignRight="@+id/img_floatwindows"/>
</RelativeLayout>
