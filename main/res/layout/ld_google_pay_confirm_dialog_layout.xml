<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_layout"
        android:layout_width="@dimen/ld_dp_266"
        android:layout_height="wrap_content">
        <FrameLayout
            android:orientation="horizontal"
            android:background="@drawable/ld_google_pay_dialog_top_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_54">
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/ld_dp_138"
                android:layout_height="@dimen/ld_dp_28"
                android:layout_marginLeft="@dimen/ld_dp_60">
                <TextView
                    android:textSize="@dimen/ld_sp_14"
                    android:textStyle="bold"
                    android:textColor="#a66c26"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/order_details_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ld_order_info_text"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:layout_marginStart="@dimen/ld_dp_20"/>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/ld_google_pay_dialog_bg"
            android:paddingLeft="@dimen/ld_dp_10"
            android:paddingTop="@dimen/ld_dp_10"
            android:paddingRight="@dimen/ld_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/ld_dp_10">
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ld_dp_8"
                android:paddingRight="@dimen/ld_dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/ld_dp_8">
                <ImageView
                    android:layout_width="@dimen/ld_dp_30"
                    android:layout_height="@dimen/ld_dp_30"
                    android:src="@drawable/ld_google_pay_dialog_info_img"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ld_dp_2"
                    android:layout_marginStart="@dimen/ld_dp_12">
                    <TextView
                        android:textSize="@dimen/ld_sp_13"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_trade_name_text"/>
                    <TextView
                        android:textSize="@dimen/ld_sp_13"
                        android:textColor="#000000"
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ld_dp_1"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#f0f0f0"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_marginBottom="@dimen/ld_dp_10"
                android:layout_marginVertical="@dimen/ld_dp_10"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ld_dp_8"
                android:paddingRight="@dimen/ld_dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/ld_dp_8">
                <ImageView
                    android:layout_width="@dimen/ld_dp_30"
                    android:layout_height="@dimen/ld_dp_30"
                    android:src="@drawable/ld_google_pay_dialog_order_img"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ld_dp_2"
                    android:layout_marginStart="@dimen/ld_dp_12">
                    <TextView
                        android:textSize="@dimen/ld_sp_13"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_order_id_text"/>
                    <TextView
                        android:textSize="@dimen/ld_sp_13"
                        android:textColor="#000000"
                        android:id="@+id/order_id_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ld_dp_1"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#f0f0f0"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_marginBottom="@dimen/ld_dp_10"
                android:layout_marginVertical="@dimen/ld_dp_10"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ld_dp_8"
                android:paddingRight="@dimen/ld_dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/ld_dp_8">
                <ImageView
                    android:layout_width="@dimen/ld_dp_30"
                    android:layout_height="@dimen/ld_dp_30"
                    android:src="@drawable/ld_google_pay_dialog_amount_img"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ld_dp_2"
                    android:layout_marginStart="@dimen/ld_dp_12">
                    <TextView
                        android:textSize="@dimen/ld_sp_13"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_total_amount_text"/>
                    <TextView
                        android:textSize="@dimen/ld_sp_13"
                        android:textColor="#ff7a00"
                        android:id="@+id/amount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ld_dp_1"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#f0f0f0"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_marginBottom="@dimen/ld_dp_10"
                android:layout_marginVertical="@dimen/ld_dp_10"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ld_dp_18"
                android:layout_marginStart="@dimen/ld_dp_10"
                android:layout_marginEnd="@dimen/ld_dp_10">
                <Button
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#daa10f"
                    android:gravity="center"
                    android:id="@+id/cancel_btn"
                    android:background="@drawable/ld_white_radius_5dp_bg"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ld_dp_38"
                    android:text="@string/ld_repayment_text"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/ld_dp_1"
                    android:layout_marginEnd="@dimen/ld_dp_10"
                    style="?android:attr/borderlessButtonStyle"/>
                <Button
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#492e00"
                    android:gravity="center"
                    android:id="@+id/confirm_btn"
                    android:background="@drawable/ld_google_pay_dialog_button_bg"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ld_dp_38"
                    android:text="@string/ld_completed_pay_text"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/ld_dp_1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/loading_layout"
        android:background="@drawable/ld_bg_dialog_loading"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="@dimen/ld_dp_60"
        android:layout_height="@dimen/ld_dp_60">
        <ImageView
            android:id="@+id/loading_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ld_loading_white"/>
    </LinearLayout>
</FrameLayout>
