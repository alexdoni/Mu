<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/item_layout"
        android:background="@drawable/ld_ldbit_item_selector_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ld_sp_8"
            android:textColor="#fd764c"
            android:layout_gravity="top|right"
            android:id="@+id/tv_additional"
            android:background="@drawable/ld_ldbit_item_reward_bg"
            android:paddingLeft="@dimen/ld_dp_5"
            android:paddingTop="1dp"
            android:paddingRight="@dimen/ld_dp_5"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/ld_dp_5"
            android:paddingVertical="1dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ld_dp_5"
            android:layout_marginTop="@dimen/ld_dp_12"
            android:layout_marginRight="@dimen/ld_dp_5"
            android:layout_marginBottom="@dimen/ld_dp_10"
            android:layout_marginHorizontal="@dimen/ld_dp_5">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/ld_dp_15"
                    android:layout_height="@dimen/ld_dp_15"
                    android:src="@drawable/ld_coin_icon"/>
                <TextView
                    android:textSize="@dimen/ld_sp_14"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/ld_dp_3"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#999999"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_3"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
