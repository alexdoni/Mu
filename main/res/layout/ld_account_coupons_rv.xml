<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="#f2f3f5"
        android:paddingTop="@dimen/ld_dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ld_dp_50"
        android:paddingStart="@dimen/ld_dp_30">
        <com.p008ld.sdk.widget.MyRadioGroup
            android:layout_gravity="center_vertical"
            android:id="@+id/top_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/ld_sp_13"
            android:textColor="#80000000"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/illustrate_tv"
            android:padding="@dimen/ld_dp_16"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ld_illustrate_text"/>
    </FrameLayout>
    <ListView
        android:id="@+id/recyclerView"
        android:background="#ffffff"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ld_dp_15"
        android:layout_marginTop="@dimen/ld_dp_70"
        android:layout_marginRight="@dimen/ld_dp_15"
        android:listSelector="@android:color/transparent"
        android:divider="@null"/>
    <RelativeLayout
        android:id="@+id/empty_data_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/bkEmptyView"
            android:layout_width="@dimen/ld_dp_85"
            android:layout_height="@dimen/ld_dp_85"
            android:src="@drawable/ld_no_data_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/ld_sp_12"
            android:textColor="#4d000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_7"
            android:text="@string/ld_not_coupon_text"
            android:layout_below="@+id/bkEmptyView"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
