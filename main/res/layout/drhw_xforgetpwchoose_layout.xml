<?xml version="1.0" encoding="utf-8"?>
<com.xsdk.ab_firstbase.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/drhw_sdk_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xsdk.ab_firstbase.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%">
        <RelativeLayout
            android:id="@+id/rel_tile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%">
            <ImageView
                android:id="@+id/tw_sdk_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tw_sdk_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/tw_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/tw_find_pwd"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/tw_color_c444444"
            android:gravity="center"
            android:id="@+id/text_tip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/tw_input_restpwd"
            android:layout_below="@+id/rel_tile"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tw_phone_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/text_tip"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%"
            style="@style/tw_login_input_area">
            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/phone"
                android:layout_centerVertical="true"/>
            <TextView
                android:textColor="@color/tw_color_c999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tw_20"
                android:text="@string/tw_mobile_num"
                android:layout_toRightOf="@+id/img_phone"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/select_phone"
                android:padding="@dimen/tw_check_padding_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tw_20"
                android:src="@drawable/drhw_registerbox_off"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_line1"
            android:background="@color/tw_main_text_black"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tw_phone_layout"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tw_email_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/view_line1"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%"
            style="@style/tw_login_input_area">
            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/drhw_message_ic"
                android:layout_centerVertical="true"/>
            <TextView
                android:textColor="@color/tw_color_c999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tw_20"
                android:text="@string/tw_safe_email"
                android:layout_toRightOf="@+id/img_email"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/select_email"
                android:padding="@dimen/tw_check_padding_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tw_20"
                android:checked="false"
                android:src="@drawable/drhw_registerbox_off"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_line2"
            android:background="@color/tw_main_text_black"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tw_email_layout"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/view_line2"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%">
            <Button
                android:textSize="14sp"
                android:textColor="@color/tw_white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tw_forgetpwd_submit_btn"
                android:background="@drawable/drhw_sdk_button1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/tw_show_ensure"/>
        </LinearLayout>
    </com.xsdk.ab_firstbase.percent.PercentRelativeLayout>
</com.xsdk.ab_firstbase.percent.PercentRelativeLayout>
