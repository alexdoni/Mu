<?xml version="1.0" encoding="utf-8"?>
<com.xsdk.ab_firstbase.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/drhw_countdown_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/tw_close_dia_iv"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/drhw_close_ic"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_top_logo"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="20%"/>
    <TextView
        android:textSize="22dp"
        android:textColor="#a5a5a5"
        android:gravity="center"
        android:id="@+id/tv_del_tip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/tw_countdown_service_tip"
        android:textScaleX="1.1"
        android:layout_below="@+id/iv_top_logo"
        app:layout_heightPercent="18%"/>
    <FrameLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_del_tip"
        app:layout_heightPercent="20%">
        <View
            android:layout_gravity="center"
            android:background="#d1d8e3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <FrameLayout
                android:background="@drawable/drhw_countdown_text_bg"
                android:layout_width="45dp"
                android:layout_height="80dp">
                <TextView
                    android:textSize="56dp"
                    android:textColor="@color/tw_white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_hour_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </FrameLayout>
            <FrameLayout
                android:background="@drawable/drhw_countdown_text_bg"
                android:layout_width="45dp"
                android:layout_height="80dp">
                <TextView
                    android:textSize="56dp"
                    android:textColor="@color/tw_white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_hour_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </FrameLayout>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:src="@drawable/drhw_countdown_split"/>
            <FrameLayout
                android:background="@drawable/drhw_countdown_text_bg"
                android:layout_width="45dp"
                android:layout_height="80dp">
                <TextView
                    android:textSize="56dp"
                    android:textColor="@color/tw_white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_min_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </FrameLayout>
            <FrameLayout
                android:background="@drawable/drhw_countdown_text_bg"
                android:layout_width="45dp"
                android:layout_height="80dp">
                <TextView
                    android:textSize="56dp"
                    android:textColor="@color/tw_white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_min_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </FrameLayout>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:src="@drawable/drhw_countdown_split"/>
            <FrameLayout
                android:background="@drawable/drhw_countdown_text_bg"
                android:layout_width="45dp"
                android:layout_height="80dp">
                <TextView
                    android:textSize="56dp"
                    android:textColor="@color/tw_white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_sec_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </FrameLayout>
            <FrameLayout
                android:background="@drawable/drhw_countdown_text_bg"
                android:layout_width="45dp"
                android:layout_height="80dp">
                <TextView
                    android:textSize="56dp"
                    android:textColor="@color/tw_white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_sec_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#bababa"
        android:id="@+id/btn_confirm"
        android:background="@drawable/drhw_shape_allround_dbdbdb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/tw_countdown_service_start"
        android:layout_below="@+id/ll_time"
        android:layout_centerInParent="true"
        app:layout_heightPercent="13%"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="67dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/drhw_sdk_member_tip"
        android:layout_below="@+id/btn_confirm"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="20%"/>
</com.xsdk.ab_firstbase.percent.PercentRelativeLayout>
