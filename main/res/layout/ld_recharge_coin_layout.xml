<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/ld_bg_bit_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_70"
            android:layout_marginLeft="@dimen/ld_dp_12"
            android:layout_marginRight="@dimen/ld_dp_12"
            android:layout_marginBottom="@dimen/ld_dp_10"
            android:layout_marginHorizontal="@dimen/ld_dp_12">
            <TextView
                android:textSize="@dimen/ld_sp_12"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_bit_balance"/>
            <TextView
                android:textSize="@dimen/ld_sp_24"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:id="@+id/ld_coin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_5"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/ld_coin_icon_1x"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/drop_down_layout"
            android:paddingLeft="@dimen/ld_dp_12"
            android:paddingRight="@dimen/ld_dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/ld_dp_12">
            <TextView
                android:textSize="@dimen/ld_sp_12"
                android:textColor="#999999"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ld_recharge_amount_of_money_text"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/country_area_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/ld_dp_14"
                    android:layout_height="@dimen/ld_dp_14"
                    android:layout_marginTop="0.5dp"
                    android:src="@drawable/ld_positioning_img"/>
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#333333"
                    android:id="@+id/country_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ld_dp_4"
                    android:layout_marginEnd="@dimen/ld_dp_4"/>
                <ImageView
                    android:layout_width="@dimen/ld_dp_12"
                    android:layout_height="@dimen/ld_dp_12"
                    android:layout_marginTop="0.5dp"
                    android:src="@drawable/ld_ic_unfold"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:paddingLeft="@dimen/ld_dp_12"
            android:paddingRight="@dimen/ld_dp_12"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/ld_dp_12">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.p008ld.sdk.widget.MyListView
                    android:id="@+id/list_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ld_dp_16"
                    android:listSelector="@android:color/transparent"
                    android:divider="@null"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:textSize="@dimen/ld_sp_13"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/btn_recharge"
            android:background="@drawable/ld_button_yellow_corners_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_38"
            android:layout_marginLeft="@dimen/ld_dp_12"
            android:layout_marginTop="@dimen/ld_dp_15"
            android:layout_marginRight="@dimen/ld_dp_12"
            android:layout_marginBottom="@dimen/ld_dp_15"
            android:text="@string/ld_recharge_text"
            android:layout_marginHorizontal="@dimen/ld_dp_12"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</FrameLayout>
