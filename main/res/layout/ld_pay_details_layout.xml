<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ld_dialog_base_bg"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/ld_dp_300"
        android:layout_height="@dimen/ld_dp_16"
        android:layout_marginTop="@dimen/ld_dp_14">
        <TextView
            android:textSize="@dimen/ld_sp_15"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ld_payment_confirmation_text"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/ldbit_pay_back_img"
            android:layout_width="@dimen/ld_dp_16"
            android:layout_height="@dimen/ld_dp_16"
            android:src="@drawable/ld_top_back_icon"
            android:layout_marginStart="@dimen/ld_dp_15"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/ld_dp_300"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ld_dp_46"
        android:paddingStart="@dimen/ld_dp_15"
        android:paddingEnd="@dimen/ld_dp_15">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/ld_dp_7"
                android:paddingBottom="@dimen/ld_dp_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/ld_dp_7">
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#666666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ld_trade_name_text"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#333333"
                    android:id="@+id/commodity_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/ld_dp_7"
                android:paddingBottom="@dimen/ld_dp_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_8"
                android:paddingVertical="@dimen/ld_dp_7">
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#666666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ld_commodity_price_text"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#333333"
                    android:id="@+id/currency_and_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/selected_coupon_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/ld_dp_42">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/ld_sp_12"
                        android:textColor="#666666"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_coupon_text"
                        android:includeFontPadding="false"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/ld_sp_10"
                        android:textColor="#666666"
                        android:id="@+id/select_coupon_desc_tv"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ld_dp_4"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#999999"
                    android:id="@+id/coupon_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"/>
                <ImageView
                    android:layout_width="@dimen/ld_dp_16"
                    android:layout_height="@dimen/ld_dp_16"
                    android:src="@drawable/ld_item_right_img"
                    android:layout_marginStart="@dimen/ld_dp_1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/ld_dp_7"
            android:paddingBottom="@dimen/ld_dp_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_7"
            android:paddingVertical="@dimen/ld_dp_7">
            <TextView
                android:textSize="@dimen/ld_sp_12"
                android:textColor="#666666"
                android:id="@+id/ld_coin_pay_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ld_total_amount_text"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="@dimen/ld_dp_16"
                android:layout_height="@dimen/ld_dp_16"
                android:src="@drawable/ld_coin_icon"/>
            <TextView
                android:textSize="@dimen/ld_sp_13"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:id="@+id/preferential_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/ld_dp_3"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ld_dp_65"
                android:layout_marginStart="@dimen/ld_dp_10">
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ld_balance_text"
                    android:includeFontPadding="false"/>
                <ImageView
                    android:layout_width="@dimen/ld_dp_12"
                    android:layout_height="@dimen/ld_dp_12"
                    android:src="@drawable/ld_coin_icon"
                    android:layout_marginStart="@dimen/ld_dp_2"
                    android:layout_marginEnd="@dimen/ld_dp_2"/>
                <TextView
                    android:textSize="@dimen/ld_sp_12"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:id="@+id/my_ld_coins_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="@dimen/ld_sp_11"
                    android:textColor="#ff0000"
                    android:id="@+id/ld_coin_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:textSize="@dimen/ld_sp_12"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/charge_btn"
                android:background="@drawable/ld_button_yellow_corners_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ld_dp_38"
                android:layout_marginTop="@dimen/ld_dp_7"
                android:layout_marginBottom="@dimen/ld_dp_20"
                android:text="@string/ld_immediate_pay_text"
                style="?android:attr/borderlessButtonStyle"/>
            <ListView
                android:id="@+id/coupon_listview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ld_dp_16"
                android:listSelector="#00000000"
                android:divider="@null"
                android:layout_marginStart="@dimen/ld_dp_14"
                android:layout_marginEnd="@dimen/ld_dp_14"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/coupon_layout"
        android:background="@drawable/ld_dialog_base_bg"
        android:visibility="invisible"
        android:layout_width="@dimen/ld_dp_300"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="@dimen/ld_dp_300"
            android:layout_height="@dimen/ld_dp_16"
            android:layout_marginTop="@dimen/ld_dp_14">
            <TextView
                android:textSize="@dimen/ld_sp_15"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_select_coupon_text"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/coupon_back_img"
                android:layout_width="@dimen/ld_dp_16"
                android:layout_height="@dimen/ld_dp_16"
                android:src="@drawable/ld_top_back_icon"
                android:layout_marginStart="@dimen/ld_dp_14"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
