<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupons_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/ld_select_item_default_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ld_dp_65"
        android:layout_marginBottom="@dimen/ld_dp_5"
        android:paddingStart="@dimen/ld_dp_8"
        android:paddingEnd="@dimen/ld_dp_8">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="@dimen/ld_dp_48"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/ld_sp_11"
                android:textColor="#333333"
                android:id="@+id/coupon_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/ld_sp_9"
                android:textColor="#999999"
                android:id="@+id/coupon_valid_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/ld_sp_17"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:id="@+id/discount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/ld_sp_9"
                android:textColor="#ff0000"
                android:id="@+id/highest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_2"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/new_coupon_img"
        android:visibility="gone"
        android:layout_width="@dimen/ld_dp_36"
        android:layout_height="@dimen/ld_dp_15"
        android:src="@drawable/ld_new_xoupon_icon"/>
    <FrameLayout
        android:id="@+id/expire_layout"
        android:background="@drawable/ld_coupon_expire_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/ld_dp_11"
        android:alpha="0.7">
        <TextView
            android:textSize="@dimen/ld_sp_12"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:id="@+id/expire_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ld_expired_text"/>
    </FrameLayout>
</FrameLayout>
