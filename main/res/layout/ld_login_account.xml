<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_login_layout"
    android:background="@drawable/ld_dialog_base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="@dimen/ld_base_dialog_width"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/close_login"
            android:padding="@dimen/ld_dp_5"
            android:visibility="gone"
            android:layout_width="@dimen/ld_dp_30"
            android:layout_height="@dimen/ld_dp_30"
            android:layout_marginTop="@dimen/ld_dp_5"
            android:src="@drawable/ld_dialog_close_img"
            android:layout_marginEnd="@dimen/ld_dp_5"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_contact_service"
            android:visibility="visible"
            android:layout_width="@dimen/ld_dp_20"
            android:layout_height="@dimen/ld_dp_20"
            android:layout_marginTop="@dimen/ld_dp_10"
            android:layout_marginRight="@dimen/ld_dp_10"
            android:src="@drawable/ld_open_service"/>
        <ImageView
            android:layout_width="@dimen/ld_dp_110"
            android:layout_height="@dimen/ld_dp_110"
            android:src="@drawable/ld_login_icon"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/google_login_btn"
            android:background="@drawable/ld_google_login_btn_bg"
            android:padding="@dimen/ld_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_22"
            android:layout_marginStart="@dimen/ld_base_dialog_padding"
            android:layout_marginEnd="@dimen/ld_base_dialog_padding">
            <ImageView
                android:layout_width="@dimen/ld_dp_22"
                android:layout_height="@dimen/ld_dp_22"
                android:src="@drawable/ld_google_icon"/>
            <TextView
                android:textSize="@dimen/ld_sp_11"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_google_login_text"
                android:layout_marginStart="@dimen/ld_dp_4"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_14">
            <ImageView
                android:id="@+id/line_login_btn"
                android:layout_width="@dimen/ld_dp_24"
                android:layout_height="@dimen/ld_dp_24"
                android:src="@drawable/ld_login_logo_line"/>
            <ImageView
                android:id="@+id/email_login_btn"
                android:layout_width="@dimen/ld_dp_24"
                android:layout_height="@dimen/ld_dp_24"
                android:src="@drawable/ld_login_logo_email"
                android:layout_marginStart="@dimen/ld_dp_20"/>
            <ImageView
                android:id="@+id/facebook_login_btn"
                android:layout_width="@dimen/ld_dp_24"
                android:layout_height="@dimen/ld_dp_24"
                android:src="@drawable/ld_login_logo_facebook"
                android:layout_marginStart="@dimen/ld_dp_20"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/agreement_layout"
            android:paddingBottom="@dimen/ld_dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_8"
            android:layout_marginStart="@dimen/ld_dp_25"
            android:layout_marginEnd="@dimen/ld_dp_25">
            <CheckBox
                android:id="@+id/register_accept_agreement"
                android:background="@drawable/ld_accept_checkbox"
                android:layout_width="@dimen/ld_dp_14"
                android:layout_height="@dimen/ld_dp_14"
                android:checked="false"
                android:button="@null"/>
            <TextView
                android:textSize="@dimen/ld_sp_9"
                android:textColor="#999999"
                android:id="@+id/read_and_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_user_agreement_privacy_policy_text"
                android:layout_marginStart="@dimen/ld_dp_2"
                android:layout_toEndOf="@+id/register_accept_agreement"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
