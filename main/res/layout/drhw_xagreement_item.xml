<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:textSize="12dp"
        android:textColor="@color/tw_color_c444444"
        android:gravity="center_vertical"
        android:id="@+id/cb_item_agreement"
        android:padding="@dimen/tw_check_padding_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:button="@null"
        android:drawableLeft="@drawable/drhw_selector_agreement"
        android:drawablePadding="@dimen/tw_option_item_marginLeft"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/tw_black"
        android:id="@+id/tv_item_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=""/>
</LinearLayout>
