<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@drawable/ld_bg_dialog_loading"
            android:layout_width="@dimen/ld_dp_60"
            android:layout_height="@dimen/ld_dp_60">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/kkk_loading_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ld_loading_white"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_loading_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_27">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/ld_dp_20"
                android:layout_height="@dimen/ld_dp_20"
                android:src="@drawable/ld_loading_close"/>
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_8"
                android:text="@string/ld_loading_cancel"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
