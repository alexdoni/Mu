<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ld_dp_60"
        android:layout_marginBottom="@dimen/ld_dp_5"
        android:paddingStart="@dimen/ld_dp_8"
        android:paddingEnd="@dimen/ld_dp_8">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="@dimen/ld_dp_48"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/ld_sp_11"
                android:textColor="#333333"
                android:id="@+id/coupon_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/ld_sp_9"
                android:textColor="#999999"
                android:id="@+id/coupon_valid_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/ld_sp_14"
                android:textColor="#ff0000"
                android:id="@+id/discount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/ld_sp_9"
                android:textColor="#ff0000"
                android:id="@+id/highest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_2"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
