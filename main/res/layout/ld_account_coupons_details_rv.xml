<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/recyclerView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ld_dp_15"
        android:layout_marginRight="@dimen/ld_dp_15"
        android:listSelector="@android:color/transparent"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:divider="@null"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/ld_grey_fillet_bg"
        android:padding="@dimen/ld_dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ld_dp_15"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="@dimen/ld_dp_15"
        android:layout_below="@+id/recyclerView">
        <TextView
            android:textSize="@dimen/ld_sp_10"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用规则说明"/>
        <TextView
            android:textSize="@dimen/ld_sp_10"
            android:textColor="#666666"
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_5"
            android:lineSpacingExtra="@dimen/ld_dp_5"/>
    </LinearLayout>
</RelativeLayout>
