<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/drhw_sdk_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/tw_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/tw_shouquan_tip"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tw_contorl_center_inputlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tw_shouquan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tw_shouquan_storage"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/tw_btn_rl"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp">
        <Button
            android:textSize="14sp"
            android:textColor="@color/tw_white"
            android:layout_gravity="center"
            android:id="@+id/tw_ok"
            android:background="@drawable/drhw_sdk_button1"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:text="OK"/>
        <Button
            android:textSize="14sp"
            android:textColor="@color/tw_white"
            android:layout_gravity="center"
            android:id="@+id/tw_setting"
            android:background="@drawable/drhw_sdk_button1"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:text="@string/tw_setting"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
