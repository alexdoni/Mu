<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/drhw_shape_allround_kf"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15sp"
        android:textColor="@color/tw_black"
        android:gravity="center"
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/tw_color_c999999"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/content_tv"/>
    <Button
        android:textSize="14sp"
        android:textColor="@color/tw_white"
        android:layout_gravity="bottom"
        android:id="@+id/ok_btn"
        android:background="@drawable/drhw_sdk_button1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:text="@string/tw_shouquan_queren"
        android:layout_below="@+id/content_tv"
        android:layout_centerInParent="true"
        style="@style/tw_option_textview_style"/>
</RelativeLayout>
