<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ld_dialog_base_bg"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/top_layout"
        android:layout_width="@dimen/ld_dp_300"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ld_dp_8">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_30"
            android:paddingStart="@dimen/ld_dp_10"
            android:paddingEnd="@dimen/ld_dp_8">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/selected_country_area_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/ld_dp_16"
                    android:layout_height="@dimen/ld_dp_16"
                    android:src="@drawable/ld_positioning_icon"/>
                <TextView
                    android:textSize="@dimen/ld_sp_11"
                    android:textColor="#999999"
                    android:id="@+id/current_country_area_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/ld_dp_2"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/close_pay_dialog_img"
                android:layout_width="@dimen/ld_dp_20"
                android:layout_height="@dimen/ld_dp_20"
                android:src="@drawable/ld_dialog_close_img"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/ld_sp_15"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_gravity="center_horizontal"
            android:id="@+id/commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/ld_sp_11"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_3"
            android:text="@string/ld_recharge_method"
            android:layout_marginStart="@dimen/ld_dp_10"/>
        <TextView
            android:textSize="@dimen/ld_sp_9"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_3"
            android:layout_marginBottom="@dimen/ld_dp_7"
            android:text="@string/ld_recharge_method_tips"
            android:layout_marginStart="@dimen/ld_dp_10"
            android:layout_marginEnd="@dimen/ld_dp_10"/>
        <ListView
            android:scrollbarThumbVertical="@drawable/ld_listview_thumb"
            android:id="@+id/recharge_mode_list"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ld_dp_75"
            android:listSelector="#ffffffff"
            android:cacheColorHint="#ffffffff"
            android:divider="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ld_dp_10"
        android:paddingTop="@dimen/ld_dp_10"
        android:paddingRight="@dimen/ld_dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/ld_dp_10">
        <Button
            android:textSize="@dimen/ld_sp_13"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/charge_btn"
            android:background="@drawable/ld_button_yellow_corners_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_38"
            android:text="@string/ld_immediate_recharge_text"
            style="?android:attr/borderlessButtonStyle"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_7"
            android:layout_marginBottom="@dimen/ld_dp_10">
            <TextView
                android:textSize="@dimen/ld_sp_8"
                android:textColor="#80000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_recharge_unable"/>
            <ImageView
                android:id="@+id/iv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ld_svg_contact_service"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/country_area_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_48">
            <ImageView
                android:id="@+id/back_pay"
                android:padding="@dimen/ld_dp_5"
                android:layout_width="@dimen/ld_dp_26"
                android:layout_height="@dimen/ld_dp_26"
                android:src="@drawable/ld_top_back_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ld_dp_7"/>
            <TextView
                android:textSize="@dimen/ld_sp_15"
                android:textColor="#000000"
                android:id="@+id/title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ld_game_recharge_text"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ListView
            android:scrollbarThumbVertical="@drawable/ld_listview_thumb"
            android:id="@+id/country_area_listview"
            android:background="@drawable/ld_dialog_base_bg"
            android:layout_width="@dimen/ld_dp_300"
            android:layout_height="match_parent"
            android:listSelector="#00000000"
            android:divider="@null"/>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/loading_layout"
        android:background="@drawable/ld_bg_dialog_loading"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="@dimen/ld_dp_60"
        android:layout_height="@dimen/ld_dp_60">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/create_order_loading_img"
            android:layout_width="@dimen/ld_dp_40"
            android:layout_height="@dimen/ld_dp_40"
            android:src="@drawable/ld_loading_white"/>
    </FrameLayout>
</FrameLayout>
