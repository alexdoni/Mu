<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mulogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/unity_static_splash1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/FirstActivityWnd"
        android:background="@drawable/muuiback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/updateloadingWnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ProgressBar
                android:layout_gravity="bottom"
                android:id="@+id/downProgressBar"
                android:background="@drawable/loadbackground"
                android:paddingLeft="2dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="45dp"
                android:max="100"
                android:progress="0"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/prog"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/downProgressLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_above="@+id/downProgressBar"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/downDescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="检查版本信息"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/updateTipWnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imageView1"
                android:background="@drawable/frame"
                android:layout_width="332dp"
                android:layout_height="188dp"/>
            <Button
                android:textColor="#fcecc0"
                android:id="@+id/btnupdate"
                android:background="@drawable/button"
                android:layout_width="94dp"
                android:layout_height="36dp"
                android:layout_marginBottom="18dp"
                android:text="@string/soft_update_updatebtn"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="18sp"
                android:textColor="#c9b39c"
                android:gravity="center"
                android:id="@+id/updateDesc"
                android:layout_width="240dp"
                android:layout_height="82dp"
                android:layout_marginBottom="24dp"
                android:text="@string/dll_update_tip"
                android:layout_above="@+id/btnupdate"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="18dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff0000"
                android:gravity="center"
                android:id="@+id/updateWifiTip"
                android:layout_width="240dp"
                android:layout_height="22dp"
                android:layout_marginBottom="4dp"
                android:text="@string/WifiTip"
                android:layout_above="@+id/btnupdate"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="21dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/loading_rotate"
                android:background="@drawable/loadingquan"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
