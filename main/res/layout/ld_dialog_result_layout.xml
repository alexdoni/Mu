<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/dialog_content_layout"
        android:background="@drawable/ld_dialog_base_bg"
        android:layout_width="@dimen/ld_dp_300"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_dialog_close"
            android:padding="@dimen/ld_dp_5"
            android:layout_width="@dimen/ld_dp_27"
            android:layout_height="@dimen/ld_dp_27"
            android:layout_marginTop="@dimen/ld_dp_8"
            android:layout_marginRight="@dimen/ld_dp_8"
            android:src="@drawable/ld_dialog_close_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="@dimen/ld_dp_25"
            android:src="@drawable/ld_dialog_result_ok"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/ld_sp_14"
            android:textColor="#666666"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_5"
            android:layout_below="@+id/iv_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            style="@style/default_TextView"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ld_dp_15"
            android:layout_marginTop="@dimen/ld_dp_10"
            android:layout_marginRight="@dimen/ld_dp_15"
            android:layout_marginBottom="@dimen/ld_dp_10"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/ld_dp_15"
            android:layout_marginVertical="@dimen/ld_dp_10">
            <TextView
                android:textSize="@dimen/ld_sp_10"
                android:textColor="#999999"
                android:gravity="center"
                android:id="@+id/tv_message"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                style="@style/default_TextView"/>
            <GridView
                android:id="@+id/gridview"
                android:padding="0dp"
                android:visibility="gone"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:listSelector="@android:color/transparent"
                android:verticalSpacing="0dp"/>
        </LinearLayout>
        <Button
            android:textSize="@dimen/ld_sp_12"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/btn_confirm"
            android:background="@drawable/ld_org_btn_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_35"
            android:layout_marginLeft="@dimen/ld_dp_15"
            android:layout_marginRight="@dimen/ld_dp_15"
            android:layout_marginBottom="@dimen/ld_dp_20"
            android:text="@string/ld_determine_text"
            android:layout_below="@+id/ll_layout"
            android:layout_marginHorizontal="@dimen/ld_dp_15"/>
    </RelativeLayout>
</FrameLayout>
