<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ld_dp_55"
        android:layout_marginLeft="@dimen/ld_dp_10"
        android:layout_marginRight="@dimen/ld_dp_10"
        android:layout_marginBottom="@dimen/ld_dp_5"
        android:paddingStart="@dimen/ld_dp_8"
        android:paddingEnd="@dimen/ld_dp_8"
        android:layout_marginHorizontal="@dimen/ld_dp_10">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/recharge_mode_icon"
            android:layout_width="@dimen/ld_dp_64"
            android:layout_height="@dimen/ld_dp_30"/>
        <TextView
            android:textSize="@dimen/ld_sp_10"
            android:textColor="#333333"
            android:id="@+id/recharge_mode_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ld_dp_8"/>
        <LinearLayout
            android:gravity="end|center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/ld_sp_11"
                android:textColor="#949494"
                android:id="@+id/original_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/ld_sp_11"
                android:textColor="#333333"
                android:id="@+id/preferential_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
