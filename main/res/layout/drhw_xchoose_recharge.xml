<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/tw_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:paddingLeft="@dimen/tw_20"
            android:paddingTop="@dimen/tw_margin_size"
            android:paddingRight="@dimen/tw_20"
            android:paddingBottom="@dimen/tw_margin_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/tw_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tw_choose_recharge_tile"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="30sp"
                android:textColor="@color/tw_white"
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="@color/tw_dec_text_black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_pay_list"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/drhw_divider"
                    android:showDividers="middle"/>
                <View
                    android:id="@+id/v_line"
                    android:background="@color/tw_dec_text_black"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/google_recharge_ll"
                    android:paddingLeft="@dimen/tw_20"
                    android:paddingTop="@dimen/tw_option_item_marginLeft"
                    android:paddingRight="@dimen/tw_20"
                    android:paddingBottom="@dimen/tw_option_item_marginLeft"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_pay_way"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/drhw_googleplayicon"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/tw_white"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tw_20"
                        android:text="Google Play"/>
                </LinearLayout>
                <View
                    android:background="@color/tw_dec_text_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/gw_recharge_ll"
                    android:paddingLeft="@dimen/tw_20"
                    android:paddingTop="@dimen/tw_option_item_marginLeft"
                    android:paddingRight="@dimen/tw_20"
                    android:paddingBottom="@dimen/tw_option_item_marginLeft"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/wallet"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/tw_white"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tw_choose_recharge_gw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tw_20"
                        android:text="@string/tw_choose_recharge_gw"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
